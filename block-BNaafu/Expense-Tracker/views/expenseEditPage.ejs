<% include partials/header %>

<div class="container">
  <div class="form padding">
    <form action="/expense/<%= expense.id %>" method="POST">
      <input
        type="text"
        placeholder="Income Name"
        name="incname"
        class="input_handle"
        value="<%= expense.expname %>"
      />
      <input
        type="text"
        placeholder="Source"
        name="sources"
        class="input_handle"
        value="<%= expense.category %>"
      />
      <input
        type="number"
        placeholder="Amount"
        name="amount"
        class="input_handle"
        value="<%= expense.amount %>"
      />

      <input type="date" name="date" class="input_handle" value="<%= date %>" />

      <button type="submit" class="btn btn_sub">Update Expense</button>
    </form>
  </div>
</div>