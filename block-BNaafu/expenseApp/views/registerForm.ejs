<% include partials/header %>
<main>
  <div class="container">
    <div class="form">
      <h2>Register</h2>

      <p><%= error %></p>
      <form action="/users/register" method="POST">
        <input
          type="text"
          name="name"
          placeholder="Name"
          class="input_handle"
        />
        <input
          type="text"
          name="username"
          placeholder="Username"
          class="input_handle"
        />
        <input
          type="email"
          name="email"
          placeholder="Email"
          class="input_handle"
        />
        <input
          type="password"
          name="password"
          placeholder="Password"
          class="input_handle"
        />
        <input
          type="number"
          name="age"
          placeholder="Age"
          class="input_handle"
        />
        <input
          type="tel"
          name="phone"
          placeholder="Phone"
          class="input_handle"
        />
        <input
          type="text"
          name="country"
          placeholder="Country"
          class="input_handle"
        />
        <button type="submit" class="btn btn_sub">Register</button>
      </form>
    </div>
  </div>
</main>
